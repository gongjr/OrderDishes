<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip"/>
            <solid android:color="@color/white"/>
            <stroke android:width="1dip" android:color="@color/cl_border_orange_slight"/>
        </shape>
    </item>

    <item android:state_checked="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip"/>
            <solid android:color="@color/cl_border_orange_deep"/>
            <stroke android:width="1dip" android:color="@color/cl_border_orange_deep"/>
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dip"/>
            <solid android:color="@color/cl_border_orange_slight"/>
            <stroke android:width="1dip" android:color="@color/cl_border_orange_slight"/>
        </shape>
    </item>
</selector>
