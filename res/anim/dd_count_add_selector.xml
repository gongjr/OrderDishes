<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
       <item
           android:state_pressed="false"
           android:state_focused="false"
           android:drawable="@drawable/queue_detail_add_bg_n" >
           <layer-list >
               <item >
                   <shape> 
                      <stroke  android:width="1dip"  android:color="@color/dd_count_borader" />
                   </shape>
               </item>
               <item 
                   android:top="5dip">
                   <shape android:shape="rectangle" >
                   <gradient
                      android:startColor="#B0130E12"
                      android:endColor="#07130E12"
                      android:type="radial"
                      android:gradientRadius="20"
                      android:centerX="0"
                      android:centerY="1.0"/>
                   <corners  android:topRightRadius="10dip"/>
                   </shape>
               </item>
           </layer-list>
       </item>
	   <item
           android:state_pressed="true"
           android:drawable="@drawable/queue_detail_add_s">
           <layer-list >
               <item >
                   <shape> 
                      <stroke  android:width="1dip"  android:color="@color/dd_count_borader" />
                   </shape>
               </item>
               <item
                    android:top="5dip">
                   <shape android:shape="rectangle" >
                   <gradient
                      android:startColor="#B0130E12"
                      android:endColor="#07130E12"
                      android:type="radial"
                      android:gradientRadius="20"
                      android:centerX="0"
                      android:centerY="1.0"/>
                   <corners  android:topRightRadius="10dip"/>
                   </shape>
               </item>
           </layer-list>
       </item>
	   <item
           android:state_focused="true"
           android:state_enabled="true"
           android:drawable="@drawable/queue_detail_add_s">
           <layer-list >
               <item >
                  <shape> 
                      <stroke  android:width="1dip"  android:color="@color/dd_count_borader" />
                  </shape>
               </item>
               <item
                    android:top="5dip">
                   <shape android:shape="rectangle" >
                   <gradient
                      android:startColor="#B0130E12"
                      android:endColor="#07130E12"
                      android:type="radial"
                      android:gradientRadius="20"
                      android:centerX="0"
                      android:centerY="1.0"/>
                   <corners  android:topRightRadius="10dip"/>
                   </shape>
               </item>
           </layer-list>
       </item>
</selector>
