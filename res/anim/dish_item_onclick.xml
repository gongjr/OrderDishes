<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#f8f5ec" android:startColor="#d8d3c8" />
            <!-- 描边 -->
            <stroke android:dashGap="3dp" android:dashWidth="5dp" android:width="1dp" android:color="#f0ece2" />
            <!-- 圆角 -->
            <corners android:radius="5dp" />

        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#f8f5ec" android:startColor="#d8d3c8" />

            <stroke android:width="2dp" android:color="#d8d3c8" />

            <corners android:radius="5dp" />

        </shape></item>
    <item ><shape>
            <solid android:color="#f8f5ec" />

            <stroke android:width="1dp" android:color="#f0ece2" />

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />

        </shape></item>

</selector>