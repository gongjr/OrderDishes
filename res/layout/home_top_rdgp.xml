<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dip"
    android:background="#00000000" >

    <HorizontalScrollView
        android:id="@+id/home_top_horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="65dip"
        android:layout_marginLeft="100dip"
        android:layout_marginRight="160dip"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/home_top_catagories_relative"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <RadioGroup
                android:id="@+id/home_top_catagories_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal" >
            </RadioGroup>

            <LinearLayout
                android:id="@+id/home_top_catagories_linear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#00000000"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>
    </HorizontalScrollView>

   

</RelativeLayout>