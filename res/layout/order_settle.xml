<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/order_settle_top_bg" >

        <TextView
            android:id="@+id/settle_diskid"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/order_settle_top_bg" 
            android:gravity="center"
            android:text="9号桌订单"
            android:textSize="@dimen/text_size_24" />
        <ImageView 
            android:layout_width="300dip"
            android:layout_height="40dip"
            android:layout_centerInParent="true"
            android:background="@drawable/order_settle_top_state"/>

        <Button
            android:id="@+id/settle_back"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dip"
            android:background="@anim/orderdetaili_return_hallborder_btn"
            android:gravity="center"
            android:text="返回订单" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:background="@color/white" >

        <RelativeLayout
            android:layout_width="300dip"
            android:layout_height="80dip"
            android:layout_centerInParent="true"
            android:background="@anim/order_settle_price_border_bg"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dip"
                android:layout_centerInParent="true"
                android:background="#FFFBCF"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dip"
                    android:gravity="center_vertical"
                    android:text="应收金额："
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:id="@+id/settle_totalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="60dip"
                    android:gravity="center_vertical"
                    android:text="350.00"
                    android:textColor="#f95949"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dip"
                    android:gravity="center_vertical"
                    android:text=" 元"
                    android:textSize="@dimen/text_size_18" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="4"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#fffbcf"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip" >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/zhifubao_qrcode"
                    android:layout_width="wrap_content"
                    android:layout_height="60dip"
                    android:gravity="center_vertical"
                    android:text="支付宝支付码"
                    android:textSize="@dimen/text_size_18"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/aem3h4uvu4jrolgu12cm"
                    android:layout_below="@+id/zhifubao_qrcode"
                    android:layout_centerHorizontal="true"  />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/weixin_qrcode"
                    android:layout_width="wrap_content"
                    android:layout_height="60dip"
                    android:gravity="center_vertical"
                    android:text="微信支付码"
                    android:textSize="@dimen/text_size_18"
                     android:layout_alignParentTop="true"
                     android:layout_centerHorizontal="true"  />

                <ImageView
                    android:id="@+id/weixin_qrcode_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/aem3h4uvu4jrolgu12cm" 
                    android:layout_below="@+id/weixin_qrcode"
                    android:layout_centerHorizontal="true"  />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/white" >
        <Button
            android:id="@+id/order_zhifu_finish"
            android:layout_width="200dip"
            android:layout_height="60dip"
            android:layout_marginRight="80dip"
            android:background="@anim/order_zhifu_border_btn"
            android:text="订单完成"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:visibility="visible"
             />
 </RelativeLayout>
</LinearLayout>