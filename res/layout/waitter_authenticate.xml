<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="507dip"
    android:layout_height="330dip"
    android:background="@anim/bg_waitter_authencate" >

    <ImageButton
        android:id="@+id/waitter_dialog_close"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dip"
        android:layout_marginTop="22dip"
        android:background="@drawable/dd_close" />

    <ImageView
        android:id="@+id/waitter_authenticate_top"
        android:layout_width="226dip"
        android:layout_height="88dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dip"
        android:background="@drawable/waitter_authenticate_top_img" />

    <EditText
        android:id="@+id/waitter_authenticate_edit"
        android:layout_width="260dip"
        android:layout_height="41dip"
        android:layout_below="@+id/waitter_authenticate_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dip"
        android:background="@anim/waitter_author_bg_edittext"
        android:hint="服务员输入密码"
        android:textColorHint="#979797"
        android:gravity="center"
        android:inputType="numberPassword" />

    <Button
        android:id="@+id/waitter_dialog_submit"
        android:layout_width="106dip"
        android:layout_height="40dip"
        android:layout_below="@+id/waitter_authenticate_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dip"
        android:text="确 认"
        android:background="@anim/waitter_authenticate_submit_bg"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/password_error"
        android:layout_width="wrap_content"
        android:layout_height="41dip"
        android:layout_alignTop="@+id/waitter_authenticate_edit"
        android:layout_toRightOf="@+id/waitter_authenticate_edit"
        android:text="密码不正确"
        android:textColor="@color/hall_take_order_bg_n"
        android:gravity="center"
        android:visibility="gone" />

</RelativeLayout>